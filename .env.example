# ================================================
# NCT Translation Portal - Environment Configuration
# ================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ===================
# SERVER CONFIGURATION
# ===================
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://nct-iq.com,https://www.nct-iq.com

# ===================
# NOTION API
# ===================
# Get from: https://www.notion.so/my-integrations
NOTION_API_KEY=secret_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Your existing Customer Database ID
NOTION_CUSTOMER_DATABASE_ID=8423bdff-3b26-4b65-8681-19750f8c8cb5

# VIP Customer Profile Database ID
NOTION_VIP_DATABASE_ID=2bff0e92-5001-8084-97f4-000b8ebf1f2c

# ===================
# GOOGLE CLOUD / DRIVE API
# ===================
# Service Account JSON (base64 encoded or file path)
# Get from: https://console.cloud.google.com/iam-admin/serviceaccounts
GOOGLE_SERVICE_ACCOUNT={"type":"service_account","project_id":"nct-translation",...}

# Or use file path
# GOOGLE_SERVICE_ACCOUNT_FILE=./config/google-service-account.json

# Google Drive folder IDs
GOOGLE_DRIVE_ROOT_FOLDER_ID=your_root_folder_id
GOOGLE_DRIVE_UPLOADS_FOLDER_ID=your_uploads_folder_id
GOOGLE_DRIVE_TRANSLATED_FOLDER_ID=your_translated_folder_id

# ===================
# GEMINI AI API
# ===================
# Get from: https://ai.google.dev/
GEMINI_API_KEY=AIzaSyxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Model configuration
GEMINI_MODEL=gemini-1.5-flash
GEMINI_VISION_MODEL=gemini-1.5-flash

# ===================
# FIREBASE AUTH
# ===================
# Get from: https://console.firebase.google.com/
FIREBASE_PROJECT_ID=nct-translation
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nxxxxxxx\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@nct-translation.iam.gserviceaccount.com

# ===================
# JWT CONFIGURATION
# ===================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ===================
# SMS PROVIDER (Optional - for OTP)
# ===================
# Using Firebase Auth handles this, but if you want a backup:
# SMS_PROVIDER=twilio
# TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# TWILIO_PHONE_NUMBER=+1234567890

# ===================
# PAYMENT GATEWAYS (Iraq)
# ===================
# ZainCash
ZAINCASH_MERCHANT_ID=your_merchant_id
ZAINCASH_SECRET_KEY=your_secret_key
ZAINCASH_API_URL=https://api.zaincash.iq

# Qi Card (if available)
QICARD_MERCHANT_ID=your_merchant_id
QICARD_API_KEY=your_api_key

# ===================
# WEBHOOK SECRETS
# ===================
NOTION_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxx
PAYMENT_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxx

# ===================
# LOGGING & MONITORING
# ===================
LOG_LEVEL=info
SENTRY_DSN=https://xxxxxxx@sentry.io/xxxxxx

# ===================
# RATE LIMITING
# ===================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===================
# PRICING CONFIGURATION (IQD)
# ===================
PRICE_FULL_SERVICE_PER_PAGE=15000
PRICE_SELF_TRANSLATION_PER_PAGE=5000
PRICE_AI_TRANSLATION_PER_PAGE=10000
PRICE_CERTIFICATION_PER_DOC=5000
PRICE_ADDITIONAL_COPY=2500
PRICE_DELIVERY=5000
PRICE_INSURANCE_31_DAYS=5000
PRICE_INSURANCE_45_DAYS=7500
PRICE_INSURANCE_90_DAYS=12500
PRICE_INSURANCE_1_YEAR=25000
